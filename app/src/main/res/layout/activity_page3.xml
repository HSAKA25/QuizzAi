<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#060B18">

        <LinearLayout android:id="@+id/topBar"
            android:layout_width="0dp" android:layout_height="64dp"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:paddingStart="16dp" android:paddingEnd="12dp"
            android:background="#08101E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/menuBtn"
                android:layout_width="38dp" android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#111827" app:cardCornerRadius="10dp" app:cardElevation="0dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:orientation="vertical" android:gravity="center" android:padding="9dp">
                    <View android:layout_width="match_parent" android:layout_height="2dp"
                        android:background="#6366F1" android:layout_marginBottom="4dp"/>
                    <View android:layout_width="match_parent" android:layout_height="2dp"
                        android:background="#6366F1" android:layout_marginBottom="4dp"/>
                    <View android:layout_width="16dp" android:layout_height="2dp" android:background="#6366F1"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="QUIZZAI" android:textColor="#FFFFFF" android:textSize="10sp"
                    android:textStyle="bold" android:fontFamily="sans-serif-black" android:letterSpacing="0.18"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Learning Platform" android:textColor="#2D4060" android:textSize="9sp" android:textStyle="bold"/>
            </LinearLayout>

            <FrameLayout android:id="@+id/avatarContainer"
                android:layout_width="42dp" android:layout_height="42dp"
                android:layout_marginEnd="10dp"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">
                <androidx.cardview.widget.CardView android:layout_width="42dp" android:layout_height="42dp"
                    app:cardCornerRadius="21dp" app:cardElevation="4dp" app:cardBackgroundColor="#1E293B">
                    <ImageView android:id="@+id/avatarImage" android:layout_width="42dp" android:layout_height="42dp" android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <View android:id="@+id/topBarLine" android:layout_width="0dp" android:layout_height="1dp"
            android:background="#0D1E2E"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout android:id="@+id/headerSection"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginHorizontal="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/topBarLine"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            <TextView android:id="@+id/greetingText" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Hey there ðŸ‘‹" android:textColor="#94A3B8" android:textSize="13sp" android:layout_marginBottom="4dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Choose a Topic" android:textColor="#FFFFFF" android:textSize="24sp"
                android:textStyle="bold" android:fontFamily="sans-serif-medium"/>
            <View android:layout_width="40dp" android:layout_height="3dp" android:background="#6366F1"
                android:layout_marginTop="6dp" android:layout_marginBottom="6dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Select a language and pick your difficulty" android:textColor="#3D5166" android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/statsStrip"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginHorizontal="20dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout android:layout_width="0dp" android:layout_height="52dp" android:layout_weight="1"
                android:orientation="vertical" android:gravity="center" android:background="#0A1628" android:layout_marginEnd="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="6" android:textColor="#6366F1" android:textSize="18sp" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Topics" android:textColor="#2D4060" android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="52dp" android:layout_weight="1"
                android:orientation="vertical" android:gravity="center" android:background="#0A1628" android:layout_marginEnd="8dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="3" android:textColor="#00E5A0" android:textSize="18sp" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Levels" android:textColor="#2D4060" android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="52dp" android:layout_weight="1"
                android:orientation="vertical" android:gravity="center" android:background="#0A1628">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="45+" android:textColor="#8B5CF6" android:textSize="18sp" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Questions" android:textColor="#2D4060" android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

        <GridView android:id="@+id/gv"
            android:layout_width="0dp" android:layout_height="0dp"
            android:layout_marginHorizontal="12dp" android:layout_marginTop="14dp"
            android:numColumns="2" android:horizontalSpacing="10dp" android:verticalSpacing="10dp"
            android:stretchMode="columnWidth" android:clipToPadding="false" android:paddingBottom="88dp"
            app:layout_constraintTop_toBottomOf="@id/statsStrip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

        <View android:id="@+id/bottomBarLine" android:layout_width="0dp" android:layout_height="1dp"
            android:background="#0D1E2E"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout android:id="@+id/bottomBar"
            android:layout_width="0dp" android:layout_height="72dp"
            android:orientation="horizontal" android:gravity="center_vertical" android:background="#08101E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginEnd="16dp">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/cb" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:contentDescription="AI Chatbot" android:src="@android:drawable/ic_menu_help"
                    app:backgroundTint="#6366F1" app:borderWidth="0dp" app:elevation="14dp"
                    app:fabSize="normal" app:rippleColor="#A5B4FC" app:tint="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!--  LEFT NAVIGATION DRAWER â€” REDESIGNED               -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <ScrollView
        android:id="@+id/navDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#070C1A"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- â”€â”€ PROFILE HEADER â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="52dp"
                android:paddingBottom="20dp"
                android:background="#0A1020">

                <!-- Avatar + name row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp" android:layout_height="70dp"
                        app:cardCornerRadius="35dp" app:cardElevation="8dp" app:cardBackgroundColor="#1E293B">
                        <ImageView android:id="@+id/drawerAvatar"
                            android:layout_width="70dp" android:layout_height="70dp" android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView android:id="@+id/drawerName"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="User" android:textColor="#F0F4FF"
                            android:textSize="17sp" android:textStyle="bold"/>

                        <TextView android:id="@+id/drawerEmail"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="user@example.com" android:textColor="#304060"
                            android:textSize="11sp" android:layout_marginTop="2dp"
                            android:maxLines="1" android:ellipsize="end"/>

                        <!-- Login provider badge -->
                        <LinearLayout
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:orientation="horizontal" android:gravity="center_vertical"
                            android:background="#0D1830"
                            android:paddingHorizontal="8dp" android:paddingVertical="3dp"
                            android:layout_marginTop="6dp">
                            <ImageView android:id="@+id/drawerProviderIcon"
                                android:layout_width="13dp" android:layout_height="13dp"
                                android:layout_marginEnd="5dp"/>
                            <TextView android:id="@+id/drawerBadgeText"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Email Login" android:textColor="#6366F1"
                                android:textSize="10sp" android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Stats pills -->
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="60dp" android:orientation="vertical" android:gravity="center"
                        android:background="#0D1830" android:layout_marginEnd="8dp">
                        <TextView android:id="@+id/drawerQuizCount"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="0" android:textColor="#6366F1" android:textSize="22sp" android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="Quizzes" android:textColor="#1E3050" android:textSize="9sp" android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="60dp" android:orientation="vertical" android:gravity="center"
                        android:background="#0D1830">
                        <TextView android:id="@+id/drawerBadgeCount"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="0" android:textColor="#FBBF24" android:textSize="22sp" android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="Badges" android:textColor="#1E3050" android:textSize="9sp" android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <!-- Hidden CardView kept for Java compat -->
                    <androidx.cardview.widget.CardView android:id="@+id/drawerBadge"
                        android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"
                        app:cardBackgroundColor="#0E1528" app:cardCornerRadius="0dp" app:cardElevation="0dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- â”€â”€ SECTION: NAVIGATE â”€â”€ -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="   NAVIGATE" android:textColor="#1A2E48"
                android:textSize="10sp" android:textStyle="bold" android:letterSpacing="0.16"
                android:background="#060C1A"
                android:paddingHorizontal="16dp" android:paddingTop="20dp" android:paddingBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="4dp"
                app:cardBackgroundColor="#0C1525" app:cardCornerRadius="18dp" app:cardElevation="0dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:paddingVertical="4dp">

                    <!-- History row -->
                    <LinearLayout android:id="@+id/drawerHistory"
                        android:layout_width="match_parent" android:layout_height="58dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingHorizontal="14dp"
                        android:clickable="true" android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <androidx.cardview.widget.CardView android:layout_width="36dp" android:layout_height="36dp"
                            app:cardCornerRadius="11dp" app:cardBackgroundColor="#0F2040" app:cardElevation="0dp">
                            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                                android:text="ðŸ“‹" android:textSize="17sp" android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="14dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Quiz History" android:textColor="#C8D4F0"
                                android:textSize="14sp" android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="View past attempts" android:textColor="#243650" android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#182840" android:textSize="22sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#080F1E" android:layout_marginHorizontal="14dp"/>

                    <!-- Achievements row -->
                    <LinearLayout android:id="@+id/drawerBadges"
                        android:layout_width="match_parent" android:layout_height="58dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingHorizontal="14dp"
                        android:clickable="true" android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <androidx.cardview.widget.CardView android:layout_width="36dp" android:layout_height="36dp"
                            app:cardCornerRadius="11dp" app:cardBackgroundColor="#251800" app:cardElevation="0dp">
                            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                                android:text="ðŸ…" android:textSize="17sp" android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="14dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Achievements" android:textColor="#C8D4F0"
                                android:textSize="14sp" android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Badges &amp; milestones" android:textColor="#243650" android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#182840" android:textSize="22sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#080F1E" android:layout_marginHorizontal="14dp"/>

                    <!-- Leaderboard row -->
                    <LinearLayout android:id="@+id/drawerRanks"
                        android:layout_width="match_parent" android:layout_height="58dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingHorizontal="14dp"
                        android:clickable="true" android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <androidx.cardview.widget.CardView android:layout_width="36dp" android:layout_height="36dp"
                            app:cardCornerRadius="11dp" app:cardBackgroundColor="#182000" app:cardElevation="0dp">
                            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                                android:text="ðŸ†" android:textSize="17sp" android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="14dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Leaderboard" android:textColor="#C8D4F0"
                                android:textSize="14sp" android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Global rankings" android:textColor="#243650" android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#182840" android:textSize="22sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#080F1E" android:layout_marginHorizontal="14dp"/>

                    <!-- Analytics row -->
                    <LinearLayout android:id="@+id/drawerAnalytics"
                        android:layout_width="match_parent" android:layout_height="58dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingHorizontal="14dp"
                        android:clickable="true" android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <androidx.cardview.widget.CardView android:layout_width="36dp" android:layout_height="36dp"
                            app:cardCornerRadius="11dp" app:cardBackgroundColor="#150830" app:cardElevation="0dp">
                            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                                android:text="ðŸ“Š" android:textSize="17sp" android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="14dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Analytics" android:textColor="#C8D4F0"
                                android:textSize="14sp" android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Performance insights" android:textColor="#243650" android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#182840" android:textSize="22sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- â”€â”€ SECTION: SUPPORT â”€â”€ -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="   SUPPORT" android:textColor="#1A2E48"
                android:textSize="10sp" android:textStyle="bold" android:letterSpacing="0.16"
                android:background="#060C1A"
                android:paddingHorizontal="16dp" android:paddingTop="20dp" android:paddingBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp" android:layout_marginBottom="4dp"
                app:cardBackgroundColor="#0C1525" app:cardCornerRadius="18dp" app:cardElevation="0dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical" android:paddingVertical="4dp">

                    <!-- Contact Us row -->
                    <LinearLayout android:id="@+id/drawerContact"
                        android:layout_width="match_parent" android:layout_height="58dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingHorizontal="14dp"
                        android:clickable="true" android:focusable="true"
                        android:background="?attr/selectableItemBackground">
                        <androidx.cardview.widget.CardView android:layout_width="36dp" android:layout_height="36dp"
                            app:cardCornerRadius="11dp" app:cardBackgroundColor="#001828" app:cardElevation="0dp">
                            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                                android:text="âœ‰ï¸" android:textSize="17sp" android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="14dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Contact Us" android:textColor="#C8D4F0"
                                android:textSize="14sp" android:textStyle="bold"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Send us feedback" android:textColor="#243650" android:textSize="10sp"/>
                        </LinearLayout>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="â€º" android:textColor="#182840" android:textSize="22sp"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#080F1E" android:layout_marginHorizontal="14dp"/>

                    <!-- Daily Reminder row -->
                    <LinearLayout
                        android:layout_width="match_parent" android:layout_height="62dp"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:paddingHorizontal="14dp">
                        <androidx.cardview.widget.CardView android:layout_width="36dp" android:layout_height="36dp"
                            app:cardCornerRadius="11dp" app:cardBackgroundColor="#180E38" app:cardElevation="0dp">
                            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                                android:text="ðŸ””" android:textSize="17sp" android:gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="14dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Daily Reminder" android:textColor="#C8D4F0"
                                android:textSize="14sp" android:textStyle="bold"/>
                            <TextView android:id="@+id/reminderSubtitle"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Tap to set time" android:textColor="#243650" android:textSize="10sp"/>
                        </LinearLayout>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/reminderSwitch"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
