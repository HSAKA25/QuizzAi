<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#060A14"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#09101F"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="â€¹"
            android:textSize="34sp"
            android:textColor="#7C3AED"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Achievements"
            android:textColor="#F0F6FC"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="22sp"/>
    </LinearLayout>

    <!-- Badge count + progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D1117"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/badgeCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 14 Badges Earned"
            android:textColor="#F0F6FC"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <FrameLayout
            android:id="@+id/badgeProgressTrack"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:background="#111827">

            <View
                android:id="@+id/badgeProgressFill"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:background="#7C3AED"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Badge grid -->
    <GridView
        android:id="@+id/badgesGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:padding="12dp"
        android:scrollbars="none"/>
</LinearLayout>