<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060B18">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!--  HEADER SECTION                         -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#08101E"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trophy icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†"
            android:textSize="44sp"
            android:layout_marginBottom="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEADERBOARD"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.2" />

        <!-- Accent line -->
        <View
            android:layout_width="48dp"
            android:layout_height="3dp"
            android:background="#FFD700"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 10 Players â€¢ Live Rankings"
            android:textColor="#3D5166"
            android:textSize="12sp"
            android:letterSpacing="0.05" />

        <!-- â”€â”€ Live Stat Pills â”€â”€ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp">

            <!-- Total Players -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#0A1628"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/tvTotalPlayers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€”"
                    android:textColor="#6366F1"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Players"
                    android:textColor="#2D4060"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Top Score -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#1A1500"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/tvTopScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€”"
                    android:textColor="#FFD700"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Score"
                    android:textColor="#2D4060"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Avg Score -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="52dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#0A1628">
                <TextView
                    android:id="@+id/tvAvgScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€”"
                    android:textColor="#00E5A0"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg Score"
                    android:textColor="#2D4060"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Header bottom border -->
    <View
        android:id="@+id/headerLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#0D1E2E"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Column labels -->
    <LinearLayout
        android:id="@+id/columnLabels"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#07101E"
        app:layout_constraintTop_toBottomOf="@id/headerLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:text="RANK"
            android:textColor="#1E3A5F"
            android:textSize="9sp"
            android:textStyle="bold"
            android:letterSpacing="0.12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLAYER"
            android:textColor="#1E3A5F"
            android:textSize="9sp"
            android:textStyle="bold"
            android:letterSpacing="0.12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textColor="#1E3A5F"
            android:textSize="9sp"
            android:textStyle="bold"
            android:letterSpacing="0.12" />
    </LinearLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!--  LEADERBOARD LIST                       -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="6dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/columnLabels"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>