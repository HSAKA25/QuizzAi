<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#060A14"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#09101F"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="â€¹"
            android:textSize="34sp"
            android:textColor="#7C3AED"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Quiz History"
            android:textColor="#F0F6FC"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š"
            android:textSize="22sp"/>
    </LinearLayout>

    <!-- Stats strip -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D1117"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Total -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/totalQuizzesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#7C3AED"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quizzes"
                android:textColor="#475569"
                android:textSize="11sp"/>
        </LinearLayout>

        <View android:layout_width="1dp" android:layout_height="40dp"
            android:background="#1E293B" android:layout_gravity="center_vertical"/>

        <!-- Avg -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/avgScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#059669"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avg Score"
                android:textColor="#475569"
                android:textSize="11sp"/>
        </LinearLayout>

        <View android:layout_width="1dp" android:layout_height="40dp"
            android:background="#1E293B" android:layout_gravity="center_vertical"/>

        <!-- Badges -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/badgesEarnedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/14"
                android:textColor="#F59E0B"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:textColor="#475569"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No quizzes yet!\nComplete a quiz to see your history here ðŸŽ¯"
        android:textColor="#374151"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:visibility="gone"/>

    <!-- History list -->
    <ListView
        android:id="@+id/historyList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:scrollbars="none"
        android:clipToPadding="false"/>
</LinearLayout>