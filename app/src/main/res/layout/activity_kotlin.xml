<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B1A"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quizLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- TOP ACCENT LINE -->
        <View
            android:id="@+id/topAccent"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="#0284C7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- GLOW HEADER CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#03101A"
            app:layout_constraintTop_toBottomOf="@id/topAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp">

                <!-- Quiz title -->
                <TextView
                    android:id="@+id/quizTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“±  Kotlin Quiz"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <!-- Q counter pill -->
                <TextView
                    android:id="@+id/qnoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Q 1 / 15"
                    android:textColor="#38BDF8"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="#082030"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TIMER ROW -->
        <LinearLayout
            android:id="@+id/timerRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/headerCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â±  Time Remaining"
                android:textColor="#475569"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15s"
                android:textColor="#059669"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- TIMER BAR TRACK -->
        <FrameLayout
            android:id="@+id/timerBarTrack"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="5dp"
            android:background="#111827"
            app:layout_constraintTop_toBottomOf="@id/timerRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:id="@+id/timerBar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#059669"/>
        </FrameLayout>

        <!-- QUESTION CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/questionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#061C2A"
            app:layout_constraintTop_toBottomOf="@id/timerBarTrack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- QUESTION label badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#082030"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="14dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="#0284C7"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUESTION"
                        android:textColor="#38BDF8"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.14"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/q1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:text="Question text will appear here"
                    android:textColor="#F0F0FF"
                    android:textSize="17sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- OPTIONS RADIO GROUP -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/questionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton android:id="@+id/r1"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="18dp" android:paddingEnd="16dp"
                android:paddingTop="15dp" android:paddingBottom="15dp"
                android:text="Option 1" android:textColor="#DEDEFF" android:textSize="15sp"
                android:buttonTint="#0284C7" android:background="#051520"/>

            <RadioButton android:id="@+id/r2"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="18dp" android:paddingEnd="16dp"
                android:paddingTop="15dp" android:paddingBottom="15dp"
                android:text="Option 2" android:textColor="#DEDEFF" android:textSize="15sp"
                android:buttonTint="#0284C7" android:background="#051520"/>

            <RadioButton android:id="@+id/r3"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="18dp" android:paddingEnd="16dp"
                android:paddingTop="15dp" android:paddingBottom="15dp"
                android:text="Option 3" android:textColor="#DEDEFF" android:textSize="15sp"
                android:buttonTint="#0284C7" android:background="#051520"/>

            <RadioButton android:id="@+id/r4"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:paddingStart="18dp" android:paddingEnd="16dp"
                android:paddingTop="15dp" android:paddingBottom="15dp"
                android:text="Option 4" android:textColor="#DEDEFF" android:textSize="15sp"
                android:buttonTint="#0284C7" android:background="#051520"/>

        </RadioGroup>

        <!-- BOTTOM ACTION BUTTONS CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#03101A"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- TOP ROW: Prev + Skip -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <!-- PREV button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#1A1A35">

                        <Button
                            android:id="@+id/prevBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="â—€  Prev"
                            android:textAllCaps="false"
                            android:textColor="#8B8BB8"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:backgroundTint="@android:color/transparent"
                            android:stateListAnimator="@null"
                            android:drawableStart="@null"/>
                    </androidx.cardview.widget.CardView>

                    <!-- SKIP button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#1A1A35">

                        <Button
                            android:id="@+id/skipBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Skip  â­"
                            android:textAllCaps="false"
                            android:textColor="#8B8BB8"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:backgroundTint="@android:color/transparent"
                            android:stateListAnimator="@null"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- BOTTOM ROW: Submit (full width, accent color) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#0284C7">

                    <Button
                        android:id="@+id/b"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="âœ“   Submit Answer"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/transparent"
                        android:stateListAnimator="@null"
                        android:letterSpacing="0.03"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PROGRESS DOTS ROW -->
        <LinearLayout
            android:id="@+id/dotsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/buttonCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap an option then Submit"
                android:textColor="#2A2A50"
                android:textSize="11sp"
                android:textStyle="italic"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>