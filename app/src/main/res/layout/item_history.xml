<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D1117"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Row 1: emoji + topic + diff + time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/historyEmoji"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:textSize="22sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/historyTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F0F6FC"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/historyDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#374151"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/historyDiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/historyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#475569"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- Row 2: Score + badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/historyScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#CBD5E1"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/historyBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7C3AED"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Score bar -->
        <FrameLayout
            android:id="@+id/scoreTrack"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            android:background="#111827">

            <View
                android:id="@+id/scoreBar"
                android:layout_width="0dp"
                android:layout_height="6dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>