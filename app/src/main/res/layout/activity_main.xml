<?xml version="1.0" encoding="utf-8"?>
<!--
    QUIZZAI â€” Login Screen
    Premium Redesign: Cosmic Dark Â· Glassmorphism Â· Real brand logos Â· Animated checkbox
    Zero external drawables â€” all styling inline
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#060914"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp">

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  BACKGROUND ATMOSPHERE LAYERS                   -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <!-- Top glow â€” indigo bloom -->
        <View
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:alpha="0.22"
            android:background="@android:color/transparent"
            android:backgroundTint="#4F52FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationX="-100dp"
            android:translationY="-100dp" />

        <!-- Soft radial top â€” drawn as a large rounded card with 0 elevation -->
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:alpha="0.13"
            android:translationX="-120dp"
            android:translationY="-120dp"
            app:cardBackgroundColor="#5B5EFF"
            app:cardCornerRadius="180dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bottom-right warm violet bloom -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:alpha="0.10"
            app:cardBackgroundColor="#8B5CF6"
            app:cardCornerRadius="140dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  TOP HELP FAB                                   -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:contentDescription="Help"
            android:src="@android:drawable/ic_menu_help"
            app:backgroundTint="#111827"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabCustomSize="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#4F52FF"
            app:tint="#6366F1" />

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  HERO / BRANDING                                -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/brandingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Logo badge â€” layered for glow effect -->
            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp">

                <!-- Outer glow ring -->
                <androidx.cardview.widget.CardView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:alpha="0.4"
                    app:cardBackgroundColor="#4F52FF"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="0dp" />

                <!-- Inner logo card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#1A1DFF"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-black"
                            android:includeFontPadding="false"
                            android:text="Q"
                            android:textColor="#FFFFFF"
                            android:textSize="46sp"
                            android:textStyle="bold" />

                        <!-- Bottom accent stripe inside logo -->
                        <View
                            android:layout_width="32dp"
                            android:layout_height="3dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="14dp"
                            android:alpha="0.7"
                            android:background="#A5B4FC" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- App name -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.22"
                android:text="QUIZZAI"
                android:textColor="#F0F4FF"
                android:textSize="26sp" />

            <!-- Tagline -->
            <TextView
                android:id="@+id/tvTagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:alpha="0.55"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.06"
                android:text="Master Skills  Â·  Track Progress  Â·  Earn Badges"
                android:textColor="#94A3B8"
                android:textSize="12sp" />

            <!-- Stat pills row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="#0E1528"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¯ "
                            android:textSize="13sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="6 Topics"
                            android:textColor="#818CF8"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#0E1528"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ… "
                            android:textSize="13sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="14 Badges"
                            android:textColor="#34D399"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  SECTION LABEL                                  -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome Back"
            android:textColor="#F0F4FF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/brandingSection" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:alpha="0.6"
            android:fontFamily="sans-serif"
            android:text="Sign in to continue your journey"
            android:textColor="#94A3B8"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1" />

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  LOGIN CARD â€” Glassmorphism style               -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <androidx.cardview.widget.CardView
            android:id="@+id/loginCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#0E1528"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <!-- â”€â”€ Email field â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.12"
                    android:text="EMAIL"
                    android:textAllCaps="true"
                    android:textColor="#3D4F70"
                    android:textSize="10sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxBackgroundColor="#080D1C"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxStrokeColor="#4F52FF"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="#4F52FF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@null"
                        android:fontFamily="sans-serif"
                        android:hint="you@example.com"
                        android:inputType="textEmailAddress"
                        android:paddingStart="8dp"
                        android:textColor="#E2E8F0"
                        android:textColorHint="#2D3D58"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- â”€â”€ Password field â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.12"
                    android:text="PASSWORD"
                    android:textAllCaps="true"
                    android:textColor="#3D4F70"
                    android:textSize="10sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="#080D1C"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxStrokeColor="#4F52FF"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#4F52FF"
                    app:hintEnabled="false"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="#4F52FF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@null"
                        android:fontFamily="sans-serif"
                        android:hint="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                        android:inputType="textPassword"
                        android:paddingStart="8dp"
                        android:textColor="#E2E8F0"
                        android:textColorHint="#2D3D58"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- â”€â”€ Remember Me + Forgot Password row â”€â”€ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--
                        REMEMBER ME â€” animated CheckBox
                        Animation handled in MainActivity.java:
                        rememberMe.setOnCheckedChangeListener((v, checked) -> {
                            v.animate().scaleX(checked?1.15f:1f).scaleY(checked?1.15f:1f)
                              .setDuration(150).withEndAction(() ->
                                  v.animate().scaleX(1f).scaleY(1f).setDuration(100).start())
                              .start();
                        });
                    -->
                    <CheckBox
                        android:id="@+id/rememberMe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#4F52FF"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="6dp"
                        android:text="Remember me"
                        android:textColor="#64748B"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-medium"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="4dp"
                        android:text="Forgot password?"
                        android:textAllCaps="false"
                        android:textColor="#818CF8"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  SIGN IN BUTTON                                 -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <androidx.cardview.widget.CardView
            android:id="@+id/signInBtnCard"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            app:cardBackgroundColor="#3B3EFF"
            app:cardCornerRadius="18dp"
            app:cardElevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginCard">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.08"
                    android:text="Sign In  â†’"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/loadingSpinner"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="#FFFFFF"
                    android:visibility="gone" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  DIVIDER ROW                                    -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/dividerRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signInBtnCard">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:alpha="0.15"
                android:background="#818CF8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:alpha="0.5"
                android:fontFamily="sans-serif"
                android:text="or continue with"
                android:textColor="#64748B"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:alpha="0.15"
                android:background="#818CF8" />
        </LinearLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  SOCIAL LOGIN BUTTONS â€” proper logos, no SVG   -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/socialLoginRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerRow">

            <!-- â”€â”€ Google Button â”€â”€ -->
            <!-- Google â€” ACTIVE (highlighted with green border) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/googleBtn"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#0A1F14"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <!-- Google "G" logo using colored letter segments in a circle -->
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <!-- White circle background -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <!-- Google G logo image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/google_img"
                                android:scaleType="centerInside"
                                android:padding="2dp"
                                android:contentDescription="Google" />
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Google"
                            android:textColor="#E2E8F0"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="â— Active"
                            android:textColor="#22C55E"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Active indicator dot â€” top right corner -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#22C55E"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp" />
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- â”€â”€ Apple Button â”€â”€ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appleBtn"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#0E1528"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <!-- Apple logo image -->
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/apple_img"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:tint="#FFFFFF"
                        android:contentDescription="Apple" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Apple"
                            android:textColor="#E2E8F0"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.5"
                            android:fontFamily="sans-serif"
                            android:text="Coming soon"
                            android:textColor="#64748B"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  CREATE ACCOUNT SECTION                         -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/signUpSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/socialLoginRow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:fontFamily="sans-serif"
                android:text="Don't have an account yet?"
                android:textColor="#94A3B8"
                android:textSize="13sp" />

            <!-- Create account button â€” outlined style -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#0E1528"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <!-- Stroke border via inner padding trick -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0E1528"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:backgroundTint="#0E1528"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.06"
                        android:text="Create Free Account"
                        android:textAllCaps="false"
                        android:textColor="#818CF8"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="#1E2A50"
                        app:strokeWidth="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--  BOTTOM RANKINGS SHORTCUT                       -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <LinearLayout
            android:id="@+id/bottomActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signUpSection">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#0A0F1E"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>